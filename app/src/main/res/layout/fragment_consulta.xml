<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentConsulta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/paper_like_texture"
    tools:context=".view.Med.ui.consulta.Consulta">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="408dp"
        android:layout_height="260dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/paper_like_texture"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/RvDiagnostico"
        app:layout_constraintEnd_toEndOf="?android:attr/actionBarSize"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ofuquedolor"
            android:layout_width="match_parent"
            android:layout_height="270dp"

            tools:layout_editor_absoluteX="1dp">


            <TextView
                android:id="@+id/textView"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:text="Diagnostico para "
                app:layout_constraintBottom_toTopOf="@+id/tvedad"
                app:layout_constraintEnd_toStartOf="@+id/tvNombrePaciente"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <EditText
                android:id="@+id/tvNombrePaciente"
                android:layout_width="101dp"
                android:layout_height="37dp"
                android:text="NombrePaciente"
                android:textAlignment="center"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/genre_text_input"
                app:layout_constraintEnd_toStartOf="@+id/textView3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tvedad"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:text="de"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/genre_text_input"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tvNombrePaciente"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <EditText
                android:id="@+id/tvedad"
                android:layout_width="101dp"
                android:layout_height="33dp"
                android:drawablePadding="8dp"
                android:hint="edad"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                app:layout_constraintBottom_toTopOf="@+id/genre_text_input"
                app:layout_constraintEnd_toStartOf="@+id/tvNombrePaciente"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.5" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/genre_text_input"
                android:layout_width="406dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:hint="genero"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvedad"
                app:layout_constraintVertical_bias="0.5">

                <AutoCompleteTextView
                    android:id="@+id/tvGenero"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="406dp"
                android:layout_height="28dp"
                android:text="con estos sintomas"
                app:layout_constraintBottom_toTopOf="@+id/spinnerSintomas"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/genre_text_input"
                app:layout_constraintVertical_bias="0.5" />

            <Spinner
                android:id="@+id/spinnerSintomas"
                android:layout_width="406dp"
                android:layout_height="33dp"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:layout_constraintVertical_bias="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RvDiagnostico"
        android:layout_width="397dp"
        android:layout_height="550dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>