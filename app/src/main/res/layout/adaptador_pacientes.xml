<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
 android:layout_marginStart="16dp"
android:layout_height="200dp"
android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="199dp">



        <ImageView
            android:id="@+id/imagenPaciente"
            android:layout_width="99dp"
            android:layout_height="110dp"
            android:layout_alignParentBottom="true"

            android:layout_marginStart="16dp"
            android:layout_marginBottom="29dp" />

        <TextView
            android:id="@+id/PacienteGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imagenPaciente"
            android:layout_alignBottom="@+id/imagenPaciente"
            android:layout_marginEnd="-183dp"
            android:layout_marginBottom="88dp"
            android:gravity="center_horizontal"
            android:text="Paciente genero: "
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPacienteedad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/PacienteGenero"
            android:layout_alignBottom="@+id/PacienteGenero"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="-37dp"
            android:gravity="center_horizontal"
            android:text="Paciente edad: "
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvPacienteNombre"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/PacienteGenero"
            android:layout_alignStart="@+id/PacienteGenero"
            android:layout_marginStart="-143dp"
            android:layout_marginEnd="39dp"
            android:layout_marginBottom="24dp"
            android:layout_toStartOf="@+id/tvPacienteedad"

            android:gravity="center_horizontal"
            android:text="First"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>




    </androidx.cardview.widget.CardView>


